{
  "name": "@bananocoin/bananojs-hw",
  "version": "1.1.4",
  "module": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bananocoin/bananojs-hw.git"
  },
  "scripts": {
    "browserify": "npm run browserify-BananoHwApp;npm run browserify-TransportWebUSB;",
    "browserify-BananoHwApp": "browserify browserify/BananoHwApp.js -o dist/BananoHwApp.js",
    "browserify-TransportWebUSB": "browserify browserify/TransportWebUSB.js -o dist/TransportWebUSB.js",
    "eslint": "eslint --fix 'main.js';eslint --fix 'index.js';eslint --fix 'web'",
    "npm-check-updates": "npm-check-updates --target minor -u",
    "preflight": "npm update;npm run npm-check-updates;npm outdated;npm i;npm audit fix;npm run eslint;npm run prettier;npm run browserify;",
    "prettier-browserify": "prettier \"browserify/**/**.{ts,js,json,css,scss,html,md}\" --single-quote --write",
    "prettier-docs": "prettier \"docs/**/**.{ts,js,json,css,scss,html,md}\" --single-quote --write",
    "prettier-web": "prettier \"web/**/**.{ts,js,json,css,scss,html,md}\" --single-quote --write",
    "prettier-root": "prettier \"*.{ts,js,json,css,scss,html}\" --single-quote --write",
    "prettier": "npm run prettier-browserify;npm run prettier-docs;npm run prettier-web;npm run prettier-root;",
    "start": "node main.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@bananocoin/bananojs": "^2.5.3",
    "@ledgerhq/hw-transport-node-hid": "^6.24.1",
    "hw-app-nano": "^1.3.0"
  },
  "devDependencies": {
    "@ledgerhq/hw-transport-webusb": "^6.24.1",
    "browserify": "^17.0.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^9.2.1",
    "npm-check-updates": "^12.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1"
  },
  "description": "JavaScript utilities for the banano cryptocurrency.",
  "bugs": {
    "url": "https://github.com/bananocoin/bananojs-hw/issues"
  },
  "homepage": "https://github.com/bananocoin/bananojs-hw#readme",
  "directories": {
    "test": "test"
  }
}
